extends ../layouts/main.pug
block content
  .container
    header
      h1= title

    div
      table.table.table-striped
        thead
          tr
            th Title
            th
        
        tbody
          each arcade in arcadegames
            tr
              td
                a(href=`/arcadeGame/${arcade.id}`)= arcade.title
              td
                a(href=`/arcadeGame/${arcade.id}/edit`) edit
                = ` | `
                form.destroy(action=`/arcadeGame/destroy`, method="POST", onsubmit='return confirm("Are you sure you wish to destroy this beautiful resource?")')
                  input(type="hidden", name="id", value=`${arcade.id}`)
                  input.destroy(type="submit", value="destroy")
          
